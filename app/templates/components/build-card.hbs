<div class="row">
  <div class="two columns">
    <h6>{{#link-to "builds.build" build}}Build #{{build.buildNumber}}{{/link-to}}</h6>
  </div>
  <div class="six columns BuildCard-commitSection">
    <a href="{{build.repo.htmlUrl}}/commit/{{build.commit.sha}}">{{build.commit.shaShort}}</a>
    {{build.commit.authorName}}
    <div class="BuildCard-commitMessage">{{build.commit.message}}</div>
  </div>
  <div class="two columns BuildCard-timingSection">
    {{build-duration build=build}}<br>
    {{build-started build=build}}
  </div>
  <div class="two columns u-text-center">{{build-state build=build}}</div>
</div>
