<div class="row">
  <div class="one-half column">
    <div class="MockApprovalFlow-window">
      {{mock-approval-button isApproved="{{isApproved}}" fakeApprovalToggled="fakeApprovalToggled"}}
      <img src="/images/example-approval.png" alt="Example approval window">
    </div>
  </div>
  <div class="one-half column">
    <img src="/images/github-mock-success.png" class="MockApprovalFlow-github" style={{showWhenApproved}} {{action "toggleOverlay"}} alt="Example GitHub PR success">
    <img src="/images/github-mock-failure.png" class="MockApprovalFlow-github" style={{hideWhenApproved}} {{action "toggleOverlay"}} alt="Example GitHub PR failure">
  </div>
</div>
