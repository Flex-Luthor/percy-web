<div class="container container--forContent container--fixedWidth">
  <h5>
    {{#link-to "namespace.index" model.namespace.id}}{{model.namespace.id}}{{/link-to}}/{{#link-to "repo.index" model.namespace.id model.name}}{{model.name}}{{/link-to}}
    {{#if model.isDisabled}}
      <span class="RepoContainer-repoState">(disabled)</span>
    {{/if}}

    <a href="{{model.htmlUrl}}">{{unbound fa-icon "github"}}</a> Settings
  </h5>
  <h4>Write-only API key</h4>
  <pre><code>{{model.writeOnlyToken.token}}</code></pre>
  <p>
    This key only has access to create builds, snapshots, and upload resources to this repository. See the {{#link-to "docs"}}docs{{/link-to}} for how to set up client authentication for your app.
  </p>
  <hr>

  <h4>Diff base config</h4>
  {{repo-diff-base-settings repo=model}}
  <hr>

  <h4>Actions</h4>
  {{#if model.isEnabled}}
    {{repo-disable repo=model disableRepo="disableRepo" disabled=model.isNotCurrentUserOwner}}
    <p class="u-text-small">
      Repository billing owner: <strong>@{{model.owner.login}}</strong>
    </p>
  {{else}}
    {{repo-enable repo=model isPrimary=true enableRepo="enableRepo"}}
  {{/if}}
  <hr>
</div>
