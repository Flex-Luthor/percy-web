<div class="Panel">
</div>
<div class="container container--withPanel">
  <h4>{{model.repo.slug}}: build #{{model.id}}</h4>

  <h5>comparisons ({{model.comparisons.length}})</h5>
  {{#each comparison in model.comparisons}}
    <strong>Version:</strong> {{comparison.build.commit.sha}}<br>
    <strong>URL:</strong> {{comparison.baseResource.name}}<br>

    <div style="height: 3030px" class="row">
      {{pdiff-image-overlay pdiff=comparison.pdiff}}
    </div>
    <div class="row">
      {{pdiff-image-viewer pdiff=comparison.pdiff}}
    </div>
  {{/each}}

  <h5>resources ({{model.resources.length}})</h5>
  <table>
    {{#each resource in model.resources}}
      <tr>
        <td>
          <strong>isRoot</strong> {{resource.isRoot}}<br>
          <strong>pageUrl</strong> {{resource.pageUrl}}<br>
          <strong>resourceUrl</strong> {{resource.resourceUrl}}<br>
          <strong>mimetype</strong> {{resource.mimetype}}<br>
          <strong>sha</strong> {{resource.sha}}<br>
          <strong>createdAt</strong> {{resource.createdAt}}<br>
          <strong>updatedAt</strong> {{resource.updatedAt}}<br>
        </td>
        <td>
        {{#if resource.screenshots}}
          {{#each screenshot in resource.screenshots}}
            <img src={{unbound screenshot.image.url}} width="200">
          {{/each}}
        {{else}}
          No screenshots.
        {{/if}}
        </td>
      </tr>
    {{/each}}
  </table>
</div>
