<div class="container Header Header--large">
  {{#if session.isAuthenticated}}
    {{nav-menu user=session.secure.user classes="u-pull-right u-clear-floats"}}
  {{else}}
    {{nav-menu classes="u-pull-right u-clear-floats"}}
  {{/if}}
  <img class="Header-logo" src="/images/percy.svg">
  <h1>Percy</h1>
  <h2>Visual continuous integration for web applications</h2>
  {{#if session.isAuthenticated}}
    {{#if session.secure.user.isWhitelisted}}
      {{#link-to 'owner.index' session.secure.user.login classNames="Button Button--primary Button--onDark"}}My Repositories &raquo;{{/link-to}}
    {{else}}
      <div class="Alert Alert--info">
        <strong>Thanks for requesting an invite!</strong> We're very excited to make Percy available to you.
        <br>
        You can help by <a href="https://goo.gl/ss3aYu">telling us more</a> about your app and tech stack.
      </div>
    {{/if}}
  {{else}}
    {{login-button sessionRequiresAuthentication="sessionRequiresAuthentication"}}
  {{/if}}
</div>
