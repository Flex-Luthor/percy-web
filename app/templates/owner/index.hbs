<div class="container container--forContent container--withPanel">
  <h4>Repositories</h4>
  <p>Enable a repository below to get started:</p>
  <table class="u-full-width">
    <tr>
      <th>Repository</th>
      <th></th>
    </tr>
    {{#each repo in model.repos}}
      <tr>
        <td>{{#link-to "repo.index" repo.ownerLogin repo.name}}{{repo.name}}{{/link-to}}</td>
        <td>{{toggle-button classes="u-pull-right" enabled=repo.isEnabled enabledText="Disable Repo" disabledText="Enable Repo"}}</td>
      </tr>
    {{/each}}
  </table>
</div>
